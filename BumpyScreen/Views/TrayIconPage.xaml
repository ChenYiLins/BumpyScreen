<Page
    x:Class="BumpyScreen.Views.TrayIconPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.ContextFlyout>
        <MenuFlyout>
            <ToggleMenuFlyoutItem x:Name="StartWithWindowsToggleMenuFlyoutItem" x:Uid="ToggleMenuFlyoutItem_StartWithWindows">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE7F7;" />
                </MenuFlyoutItem.Icon>
            </ToggleMenuFlyoutItem>
            <MenuFlyoutSeparator />
            <MenuFlyoutItem x:Name="ProjectMenuFlyoutItem" x:Uid="MenuFlyoutItem_Project">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE946;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="CloseMenuFlyoutItem" x:Uid="MenuFlyoutItem_Close">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE7E8;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
        </MenuFlyout>
    </Page.ContextFlyout>
</Page>
